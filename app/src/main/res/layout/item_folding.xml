<?xml version="1.0" encoding="utf-8"?>
<com.ramotion.foldingcell.FoldingCell
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/folding_cell"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/cell_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <LinearLayout
            android:minHeight="500dp"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16.0dip"
            android:paddingEnd="16.0dip">

            <LinearLayout
                android:id="@+id/food_bill"
                android:layout_width="fill_parent"
                android:layout_height="61dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:drawablePadding="5.0dip"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="start|center"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Detalles Facturación"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18.0sp"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/ic_invoice_black_24dp" />

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="end|center"
                    android:text="125 kWh"
                    android:textColor="@color/colorPrimary"
                    android:textSize="22.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/red_tax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.0dip"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="end|center"
                    android:text="+ $10.5"
                    android:textColor="@color/ripple_gray"
                    android:textSize="13.0sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="61dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:drawablePadding="5.0dip"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="start|center"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Detalles Facturación"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18.0sp"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/ic_invoice_black_24dp" />

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="end|center"
                    android:text="125 kWh"
                    android:textColor="@color/colorPrimary"
                    android:textSize="22.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.0dip"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="end|center"
                    android:text="+ $10.5"
                    android:textColor="@color/ripple_gray"
                    android:textSize="13.0sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="86dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5.0dip"
                    android:text="Jesus Enmanuel Hernandez Gonzalez"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtUbicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5.0dip"
                    android:text="Masaya, Masaya"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:background="@color/light200" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15.0dip">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_weight="1.0"
                    android:orientation="horizontal"
                    android:weightSum="2.0">

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="start"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Energia (kWh)"
                        android:textColor="@color/black"
                        android:textSize="13.0sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txtEnergia"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="end"
                        android:text="C$ 20.50"
                        android:textColor="@color/black"
                        android:textSize="13.0sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_weight="1.0"
                    android:orientation="horizontal"
                    android:weightSum="2.0">

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="start"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Alumbrado Publico"
                        android:textColor="@color/black"
                        android:textSize="13.0sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txtAlumbrado"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="end"
                        android:text="$2.50"
                        android:textColor="@color/black"
                        android:textSize="13.0sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_weight="1.0"
                    android:orientation="horizontal"
                    android:weightSum="2.0">

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="start"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Comercializacion"
                        android:textColor="@color/black"
                        android:textSize="13.0sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txtComercia"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="end"
                        android:text="$5.10"
                        android:textColor="@color/black"
                        android:textSize="13.0sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_weight="1.0"
                    android:orientation="horizontal"
                    android:weightSum="2.0">

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:gravity="start"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Subsidio Consumo (&lt; 150 kWh)"
                        android:textColor="@color/black"
                        android:textSize="13.0sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txtSubsidio"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:gravity="end"
                        android:text="$5.10"
                        android:textColor="@color/black"
                        android:textSize="13.0sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_weight="1.0"
                    android:orientation="horizontal"
                    android:weightSum="2.0">

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:gravity="start"
                        android:text="Subsidio Distribucion (&lt; 150 kWh)"
                        android:textColor="@color/black"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="13.0sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txtSubsidio2"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:gravity="end"
                        android:text="$5.10"
                        android:textColor="@color/black"
                        android:textSize="13.0sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_weight="1.0"
                    android:orientation="horizontal"
                    android:weightSum="2.0">

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="start"
                        android:text="IVA"
                        android:textColor="@color/black"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="13.0sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txtIva"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="end"
                        android:text="$5.10"
                        android:textColor="@color/black"
                        android:textSize="13.0sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:layout_marginTop="15.0dip"
                    android:background="@color/light200" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_marginTop="15.0dip"
                    android:layout_weight="1.0"
                    android:orientation="horizontal"
                    android:weightSum="2.0">

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="start"
                        android:text="Total"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15.0sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="end"
                        android:text="$28.10"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15.0sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/cell_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/lytInvoice"
                android:clipChildren="true"
                android:layout_margin="2dp"
                style="@style/Linear_Vertical">

                <LinearLayout
                    android:id="@+id/layoutWrapper"
                    style="@style/Linear_Horizontal"
                    android:background="@color/white"
                    android:baselineAligned="false"
                    android:paddingStart="2.0dip"
                    android:paddingTop="15.0dip"
                    android:paddingEnd="2.0dip"
                    android:paddingBottom="15.0dip"
                    android:weightSum="10.0">

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="4.0"
                        android:background="@drawable/border_right_gray"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0.0dip"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:orientation="vertical"
                            tools:ignore="NestedWeights">

                            <TextView
                                android:fontFamily="@font/products_regular"
                                android:textColor="@color/ColorSecondaryText"
                                android:id="@+id/txtLabelFlag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total"
                                android:textSize="12.0sp" />

                            <TextView
                                android:fontFamily="@font/products_bold"
                                android:id="@+id/txtTotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5.0dip"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:padding="5.0dip"
                                tools:text="C$ 0.00"
                                android:textColor="@color/ColorPrimaryText"
                                android:textSize="18.0sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.0dip"
                            android:layout_marginBottom="10.0dip"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/imgView"
                                    android:layout_width="30dp"
                                    android:layout_height="30.0dip"
                                    android:src="@drawable/icon_checked"
                                    android:contentDescription="@string/todo" />
                            </LinearLayout>

                            <TextView
                                android:fontFamily="@font/products_regular"
                                android:textColor="@color/ColorSecondaryText"
                                android:id="@+id/txtTotalkWh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10.0dip"
                                tools:text="138 kWh"
                                android:textSize="12.0sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="212dp"
                        android:layout_weight="6.0"
                        android:orientation="vertical"
                        android:paddingStart="10.0dip"
                        android:paddingEnd="0.0dip">

                        <LinearLayout
                            style="@style/Linear_Vertical"
                            android:baselineAligned="false">

                            <TextView
                                android:fontFamily="@font/products_bold"
                                android:id="@+id/txtTipo"
                                style="@style/Text_H4"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:hint="Tipo de Consumo"
                                android:text="T-01"
                                android:textColor="@color/black_6"
                                android:textStyle="bold" />

                            <TextView
                                android:fontFamily="@font/products_regular"
                                android:id="@+id/txtInvoiceNumber"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10.0dip"
                                tools:text="INV-001"
                                android:textColor="@color/colorPrimary"
                                android:textSize="14.0sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.0dip"
                            android:background="@drawable/border_top_bottom_gray"
                            android:orientation="horizontal"
                            android:paddingTop="15.0dip"
                            android:paddingBottom="15.0dip"
                            android:weightSum="10.0"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="5.0"
                                android:background="@drawable/border_right_gray"
                                android:gravity="start"
                                android:orientation="vertical">

                                <TextView

                                    android:fontFamily="@font/products_regular"
                                    android:textColor="@color/ColorSecondaryText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/Inicio"
                                    android:textSize="14.0sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:fontFamily="@font/products_bold"
                                    android:id="@+id/txtInitDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4.0dip"
                                    tools:text="Sep, 12 2015"
                                    android:textColor="@color/ColorPrimaryText"
                                    android:textSize="14.0sp"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <LinearLayout
                                android:fontFamily="@font/products_bold"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="5.0"
                                android:gravity="start"
                                android:orientation="vertical"
                                android:paddingStart="15.0dip"
                                tools:ignore="RtlSymmetry">

                                <TextView
                                    android:fontFamily="@font/products_regular"
                                    android:textColor="@color/ColorSecondaryText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/fechafin"
                                    android:textSize="14.0sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/txtEndDate"
                                    android:fontFamily="@font/products_bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4.0dip"
                                    tools:text="Sep, 12 2015"
                                    android:textColor="@color/ColorPrimaryText"
                                    android:textSize="14.0sp"
                                    android:textStyle="normal" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.0dip"
                            android:orientation="horizontal"
                            android:weightSum="9.0"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:fontFamily="@font/products_regular"
                                    android:textColor="@color/ColorSecondaryText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/a_p_y_cz"
                                    android:gravity="center"
                                    android:textSize="14.0sp" />

                                <TextView
                                    android:fontFamily="@font/products_bold"
                                    android:id="@+id/txtApCz"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5.0dip"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    tools:text="C$ 135.36"
                                    android:textColor="@color/ColorPrimaryText"
                                    android:textSize="14.0sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:fontFamily="@font/products_regular"
                                    android:textColor="@color/ColorSecondaryText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/energia"
                                    android:textSize="14.0sp" />

                                <TextView
                                    android:fontFamily="@font/products_bold"
                                    android:id="@+id/txtEnergiaAmt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5.0dip"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    tools:text="C$ 723.72"
                                    android:textColor="@color/ColorPrimaryText"
                                    android:textSize="14.0sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:fontFamily="@font/products_regular"
                                    android:textColor="@color/ColorSecondaryText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/reg_ine"
                                    android:textSize="14.0sp" />

                                <TextView
                                    android:fontFamily="@font/products_bold"
                                    android:id="@+id/txtRegINE"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5.0dip"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    tools:text="C$ 5.56"
                                    android:textColor="@color/ColorPrimaryText"
                                    android:textSize="14.0sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </FrameLayout>


</com.ramotion.foldingcell.FoldingCell>